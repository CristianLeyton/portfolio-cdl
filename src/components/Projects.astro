---
import ProjectCard from "./ProjectCard.astro";
let PROJECTS = await Astro.glob('../pages/projects/*.md');

PROJECTS = PROJECTS
  .sort((a, b) => b.frontmatter.order - a.frontmatter.order)
  .filter(project => project.frontmatter.hidden == false);
---

{
  PROJECTS.map((project) => (
    <ProjectCard {...project.frontmatter} url={project.url} />
  ))
}

<style is:global>
  #proyectos {
    background:
      linear-gradient(135deg, #818df808 25%, transparent 25%) -50px 0,
      linear-gradient(225deg, #818df808 25%, transparent 25%) -50px 0,
      linear-gradient(315deg, #818df808 25%, transparent 25%),
      linear-gradient(45deg, #818df808 25%, transparent 25%);
    background-size: 2em 2em;
    background-color: transparent;
  }

</style>
