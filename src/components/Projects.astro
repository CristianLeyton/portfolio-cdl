---
import Pill from "./Pill.astro";
import TailwindIcon from "./icons/TailwindIcon.astro"
import LaravelIcon from "./icons/LaravelIcon.astro"
import LivewireIcon from "./icons/LivewireIcon.astro"
import BootstrapIcon from "./icons/BootstrapIcon.astro";

const TAGS = {
    TAILWIND: {
        name: 'Tailwind',
        icon: TailwindIcon,
        class: 'bg-sky-900 text-white'
    },

    LARAVEL: {
        name: 'Laravel',
        icon: LaravelIcon,
        class: 'bg-red-900 text-white'
    },

    LIVEWIRE: {
        name: 'Livewire',
        icon: LivewireIcon,
        class: 'bg-pink-900 text-white'
    },

    BOOTSTRAP: {
        name: 'Bootstrap',
        icon: BootstrapIcon,
        class: 'bg-indigo-950 text-white'
    }
}

const PROJECTS = [
  {
    title: "Tareas | WebApp",
    description:
      "Una aplicación donde podes administrar tus tareas pendientes, consultar las completadas y organizarlas con un sistema de etiquetas.",
    link: "https://cdl.free.nf/inicio",
    github: "https://github.com/CristianLeyton/app-tareas",
    image: "./assets/images/tarea.png",
    tags: [TAGS.LARAVEL, TAGS.LIVEWIRE, TAGS.TAILWIND],
  },
  {
    title: "Esmarty | Ecommerce",
    description:
      "Sitio de ventas de productos electrónicos. Este e-commerce fue el proyecto final de mi técnicatura en analisis de sistemas. ",
    link: "https://esmarty.free.nf/",
    github: "https://github.com/AJazure/esmarty-webapp-ecommerce",
    image: "/assets/images/esmarty.png",
    tags: [TAGS.LARAVEL, TAGS.BOOTSTRAP],
  },
];
---

{
  PROJECTS.map((project) => (
    <article class="flex flex-wrap items-center gap-4 justify-between border border-gray-700 rounded-xl py-4 px-3 mb-4">
      <a href={project.link} class="hover:scale-105 transition-all ease-in-out duration-500 mx-auto"><img class="rounded aspect-video w-[22rem] " src={project.image} alt="" /></a>
      <section class="flex flex-col gap-2 justify-center w-full md:w-[45%] text-pretty">
        <h3 class="font-semibold text-2xl text-indigo-300 mt-3 sm:mt-0">{project.title}</h3>
        <ul class="flex gap-2">
            {project.tags.map((tag) => (
                <li class={`flex gap-1 items-center rounded-full text-xs py-1 px-2 ${tag.class}`}>
                <tag.icon class="size-4"/>
                {tag.name}
                </li>
            ))}
        </ul>
        <p>{project.description}</p>
        <span class="flex gap-3 ">
          <Pill href={project.link}>
            <i class="bx bx-link-alt" /> Visitar
          </Pill>
          <Pill href={project.github}>
            <i class="bx bxl-github" /> Código
          </Pill>
        </span>
      </section>
    </article>
  ))
}
